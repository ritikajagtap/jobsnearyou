extends base

block content 
    main.main
        .card-container
            each job in jobs
                .card
                    .card__header
                        .card__picture
                            .card__picture-overlay &nbsp;
                            img.card__picture-img(src= `/img/tours/${job.imageCover}`, alt='Tour 1')
                        h3.heading-tertirary
                            span= job.name

                    .card__details
                        h4.card__sub-heading= job.type
                        p.card__text= job.eligibility
                        .card__data
                            img.card__icon(src='/img/company.png')
                            span= job.company
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-calendar')
                            span April 2021
                        .card__data
                            img.card__icon(src='/img/man.png')
                            span= job.position
                        .card__data
                            span= job.duration
                    .card__footer
                        a.btn.btn--green.btn--small(href=`/jobs/${job.slug}`) Details